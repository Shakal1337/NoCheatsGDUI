<Window x:Class="NoCheatsGD_UI_.BotSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoCheatsGD_UI_"
        mc:Ignorable="d"
        Title="Настройка" Height="240" Width="320" ResizeMode="NoResize">
    <Grid Width="320" Height="240" Background="#FF0C0C0C">
        <Button Content="Путь до бота" HorizontalAlignment="Left" Height="70" Margin="19,28,0,0" VerticalAlignment="Top" Width="275" BorderBrush="{x:Null}" Background="White" FontSize="36" Click="Button_Click"/>
        <TextBox x:Name="BotName" HorizontalAlignment="Left" Margin="19,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275" Height="41" FontSize="24" Foreground="#FF7E7E7E" TextChanged="GdBotWrite" UndoLimit="25" Cursor="Wait" Text="YourBot.dll"/>
        <Button Content="Сохранить" HorizontalAlignment="Center" Height="41" Margin="0,169,0,0" VerticalAlignment="Top" Width="275" BorderBrush="{x:Null}" Background="White" FontSize="18" Click="Button_Click_1" AutomationProperties.IsRequiredForForm="True"/>

    </Grid>
</Window>
